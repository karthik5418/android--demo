<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/yellow_square"/>


    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="wrap_content"
        android:src="@drawable/dark_green_square"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="150dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="0dp"
        android:layout_marginTop="150dp"
        android:text="PULP FICTION"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_2"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_2"
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:text="1994"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_1"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_3"
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:text="No copied text !"
        android:textSize="16sp"
        app:layout_goneMarginTop="20dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:background="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_2"
        android:textColor="@color/dots_color"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>